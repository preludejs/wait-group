{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "importsNotUsedAsValues": "error",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
